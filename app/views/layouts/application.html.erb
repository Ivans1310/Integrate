<!DOCTYPE html>
<html>
  <head>
     <meta charset="UTF-8">
    <title>Integrate</title>
    <%= csrf_meta_tags %>
      <%= csp_meta_tag %>

      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <div class="wrapper">
       	<nav id="sidebar" class="">
       		<div class="sidebar-header ">
       			<h3 class="logo  font-weight-bold">INTEGRATE</h3>
       		</div>


       		<ul class="list-unstyled components">
            <li class="active ">
              <i  style= "font-family: 'Poppins', sans-serif;">  <%= link_to ' Home',welcome_index_url ,  class:"fa fa-home",  style:"font-family: 'Poppins', sans-serif;" %></i>
       			 </li>

       			<li>
       				<a href="#"><i class="fa fa-tachometer" aria-hidden="true"></i>   Dashboard </a>
       			</li>
       			<li>
       				<a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><i class="fa fa-users" aria-hidden="true"></i><span> ¿Como integrarte?</span></a>
       				<ul class="collapse list-unstyled" id="pageSubmenu">
       					<li>
       						<a href="#"><i class="fa fa-user-o" aria-hidden="true"></i> <span>Como ciudadano </span> </a>
       					</li>
       					<li>
       						<a href="#"> <i class="fa fa-university" aria-hidden="true"></i> <span> Como Representante</span> </a>
       					</li>

       				</ul>
       			</li>
            <% if user_signed_in? %>
            <li>
              <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"> <i class="fa fa-cubes" aria-hidden="true"></i></i><span> Tematicas</span></a>
              <ul class="collapse list-unstyled" id="homeSubmenu">
                <li class="" >
                  <a> <%= link_to 'Movilidad', {:controller => "thematics", :action => "show", :location_id => current_user.location_id, :id => 1},class:"fa fa-road" %> </a>
                </li>
                <li class="d-inline-flex">
                  <a><i class="fa fa-pagelines" aria-hidden="true"></i> <span> <%= link_to 'Contaminacion',  {:controller => "thematics", :action => "show", :location_id => current_user.location_id, :id => 2}%></span> </a>
                </li>
                <li class="d-inline-flex">
                  <a href="#"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> <span>  <%= link_to 'Seguridad', {:controller => "thematics", :action => "show", :location_id => current_user.location_id, :id => 3}%></span> </a>
                </li>
                <li class="d-inline-flex">
                  <a href="#"><i class="fa fa-futbol-o" aria-hidden="true"></i><span>  <%= link_to 'Cultura y recreacion',  {:controller => "thematics", :action => "show", :location_id => current_user.location_id, :id => 4}%></span> </a>
                </li>
              </ul>
            </li>

      <% end %>

       			<li>
       				<a href="#">Contactanos</a>
       			</li>
       		</ul>

       		<ul class="list-unstyled CTAs">
       			<li>
       				<a href="#" class="download"><i class="fa fa-mobile size:3x" style="font-size:48px;" aria-hidden="true"></i> <br> Descarga nuestra App </a>
       			</li>

       		</ul>
       	</nav>

        <!-- Contenido general-->
       	<div id="content">
       		<nav class="navbar navbar-expand-lg navbar-light bg-light ">

       		<button type="button" id="sidebarCollapse" class="btn btn-icon position-fixed">
       			<i class="fa fa-align-justify"></i> <span class="font-weight-bold" > IN </span>
       		</button>

            <button class="navbar-toggler " type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav ml-auto  ">
                <li class="nav-item active border-left border-dark menu-nav pl-3 pr-3 ">
                  <a class="nav-link" href="#"> <i class="fa fa-home" aria-hidden="true"></i><span class="menu-nav"> Home</span> <span class="sr-only">(current)</span></a>
                </li>
                <% if user_signed_in? %>
                    <li class="nav-item border-left border-dark pl-3 pr-3 pt-2 menu-nav">
                       <span class=""> Hola <%= current_user.nombre_us%>! </span>
                    </li>
                    <li class="nav-item border-left border-dark pl-3 pr-3 pt-2">
                      <i class="fa fa-sign-out m-auto" aria-hidden="true"></i>
                    <span style="font-size: 50%; " class="menu-nav "> <%= link_to "Cerrar sesión", destroy_user_session_path, method: :delete %></span>
                    </li>

                 <% else %>
                     <li class="nav-item border-left border-dark pl-3 pr-3 pt-2">
                      <span><i class="fa fa-sign-in" aria-hidden="true"></i></span> <span class="menu-nav" style="font-size: 80%;"> <%= link_to "Iniciar sesión", new_user_session_path %></span>
                     </li>
                     <li class="nav-item border-left border-dark pl-3 pr-3 pt-2">
                      <span>  <i class="fa fa-id-card-o" aria-hidden="true"></i> </span> <span class="menu-nav" style="font-size: 80%;"> <%= link_to "Registrate", new_user_registration_path %></span>
                     </li>
                 <% end %>
              </ul>
            </div>
          </nav>
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>

          <%= yield %>



     <!-- Contenido general-->




        <!-- Footer-->
