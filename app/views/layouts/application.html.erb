<!DOCTYPE html>
<html>
  <head>
    <title>Integrate</title>
    <%= csrf_meta_tags %>
      <%= csp_meta_tag %>

      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light ">
    <div class="container">
      <a class="navbar-brand" ><h1 class="logo text-warning"> <%= link_to "Intégrate", welcome_index_path%>  </h1></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <!--ml-auto para mover el menu a la derecha -->
         <ul class="navbar-nav ml-auto">
          <li class="nav-item ">
            <a class="nav-link" href="#header"><h4>Home</h4></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#experence"><h4>Cuidadanos</h4></a>
          </li>
          <% if user_signed_in? %>
          <li class="nav-item">
            <a class="nav-link" href="#education"><h4><%= link_to 'Thematicas', {:controller => "thematics", :action => "index", :location_id => current_user.location_id }  %> </h3></a>
          </li>
          <% end %>

          <li class="nav-item">
            <a class="nav-link" href="#skills"><h4>Equipos</h3></a>
          </li>
          <% if user_signed_in? %>
              <li class="nav-item m-auto">
                <h4 ><%= link_to "Cerrar sesión", destroy_user_session_path, method: :delete %></h4>
              </li>
              <li class="nav-item m-auto">
                <h6 class=""><%= current_user.email%> </h6>
              </li>
           <% else %>
               <li class="nav-item m-auto">
                 <h4 class="text-success "><%= link_to "Iniciar sesión", new_user_session_path %></h4>
               </li>
               <li class="nav-item m-auto">
                 <h4><%= link_to "Crear cuenta", new_user_registration_path %></h4>
               </li>
           <% end %>


        </ul>
      </div>
    </div>
  </nav>



    <%= yield %>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </body>
</html>
